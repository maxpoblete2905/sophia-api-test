{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@auth": ["src/core/auth"],
      "@auth/meta-types": ["src/core/auth/auth.meta-types"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@config": ["src/common/config"],
      "@config/*": ["src/common/config/*"],
      "@core": ["src/core"],
      "@data": ["src/core/data"],
      "@database": ["src/core/database"],
      "@database/validators": ["src/core/database/validators"],
      "@decorators": ["src/common/decorators"],
      "@dto": ["src/common/dto"],
      "@employee": ["src/core/employee"],
      "@filters": ["src/common/filters"],
      "@globals": ["src/common/globals"],
      "@globals/utility": ["src/common/globals/utility"],
      "@guards": ["src/common/guards"],
      "@hooks": ["src/common/hooks"],
      "@interceptors": ["src/common/interceptors"],
      "@mail": ["src/core/sendgrid"],
      "@mail/meta-types": ["src/core/sendgrid/sendgrid.meta-types"],
      "@pdf": ["src/core/pdf"],
      "@pdf/meta-types": ["src/core/pdf/pdf.meta-types"],
      "@pipes": ["src/common/pipes"],
      "@process": ["src/core/process"],
      "@providers": ["src/common/providers"],
      "@settlement": ["src/core/settlement"],
      "@tokens": ["src/common/tokens"],
      "@upload": ["src/core/upload"],
      "@upload/meta-types": ["src/core/upload/upload.meta-types"],
      "@util": ["src/common/util"]
    }
  }
}
